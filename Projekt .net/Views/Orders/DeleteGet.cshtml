@model Projekt_.net.Entities.OrderEntity


<h2>Usuń zamówienie</h2>


<div class="form-group row">
    <label for="input" class="col-sm-2 col-form-label">Nazwa kontrahenta</label>
    <div class="col-sm-10">
        <input asp-for="Contractor" disabled class="form-control" readonly>
    </div>
</div>
<div class="form-group row">
    <label for="input" class="col-sm-2 col-form-label">Zamówiony towar</label>
    <div class="col-sm-10">
        <input asp-for="Items" disabled class="form-control" readonly>
    </div>
</div>
<div class="form-group row">
    <label for="input" class="col-sm-2 col-form-label">Adres wysyłki</label>
    <div class="col-sm-10">
        <input asp-for="Address" disabled class="form-control" readonly>
    </div>
</div>
<div class="form-group row">
    <label for="input" class="col-sm-2 col-form-label">Cena netto towaru</label>
    <div class="col-sm-10">
        <input asp-for="NetOrderValue" disabled class="form-control" readonly>
    </div>
</div>

<div class="form-group row">
    <label for="input" class="col-sm-2 col-form-label">Data zamówienia</label>
    <div class="col-sm-10">
        <input asp-for="OrderDate" disabled class="form-control" value="@DateTime.Now.ToString("dd.MM.yyyy")" readonly />
    </div>
</div>

<div class="form-group row">
    <label for="input" class="col-sm-2 col-form-label">Status zamówienia</label>
    <div class="col-sm-10">
        <input asp-for="OrderStatusEnum" class="form-control" readonly />
    </div>
</div>
<div class="form-group row">
    <a asp-action="Index" class="btn btn-primary w-100">Lista zamówień</a>
</div>
<div class="form-group row">
    <a asp-controller="Home" asp-action="Menu" class="btn btn-primary w-100">Powrót do menu</a>
</div>


<form asp-action="DeletePost" asp-route-id="@Model.Id">
    <div class="form-group row">
        <input type="submit" class="btn btn-danger w-100 mt-3" value="Usuń" />
    </div>
</form>
