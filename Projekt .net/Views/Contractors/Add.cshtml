@using Projekt_.net.Enums
@model ContractorsModel


<h2>Dodaj nowego kontahenta</h2>

<form method="POST" asp-action="Add">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Nazwa kontrahenta</label>
        <div class="col-sm-10">
            <input asp-for="ContractorName" class="form-control">
        </div>
        <span asp-validation-for="ContractorName" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Adres e-mail</label>
        <div class="col-sm-10">
            <input asp-for="EmailAddress" class="form-control">
        </div>
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Adres kontrahenta</label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control">
        </div>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Numer telefonu</label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" class="form-control">
        </div>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">NIP</label>
        <div class="col-sm-10">
            <input asp-for="NIP" type="date" class="form-control" />
        </div>
        <span asp-validation-for="NIP" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <input type="submit" class="btn btn-success w-100 mt-3" value="Dodaj nowego kontrahenta" />
    </div>

    <div class="form-group row">
        <a asp-controller="Home" asp-action="Menu" class="btn btn-primary w-100">Powrót do menu</a>
    </div>
</form>