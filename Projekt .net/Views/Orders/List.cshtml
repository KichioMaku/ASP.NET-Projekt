@model IEnumerable<Projekt_.net.Entities.OrderEntity>


<h2>Lista zamówień</h2>
<form method="GET" class="form-inline mb-2">
    <input type="text" name="name" placeholder="Filter by name" class="form-control" />
    <button type="submit" class="btn btn-primary ml-2">Wyszukaj zamówienie</button>
    <div class="col">
        <a asp-action="Index" class="btn btn-primary w-30">Dodaj nowe zamówienie</a>
    </div>
</form>
<table class="table table-bordered table-striped" >
    <thead>
        <tr>
            <th>Kontrahent</th>
            <th>Przedmioty</th>
            <th>Adres wysyłki</th>
            <th>Wartość zamówienia</th>
            <th>Data zamówienia</th>
            <th>Status zamówienia</th>
            <th>Opcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Contractor</td>
            <td>@item.Items </td>
            <td>@item.Address</td>
            <td>@item.NetOrderValue</td>
            <td>@item.OrderDate</td>
            <td>@item.Status</td>

            <td>
                <div class="btn-group" role="group">
                    <a asp-controller="Orders" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Zmień</a>
                    <a asp-controller="Orders" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Usuń</a>
                    <a asp-controller="Orders" asp-action="Wysłano" asp-route-Id="@item.Id" class="btn btn-success mx-1">Wysłano</a>
                </div>
            </td>
        </tr>

        }
    </tbody>

</table>
