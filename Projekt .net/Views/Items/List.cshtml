@model IEnumerable<Projekt_.net.Entities.ItemEntity>
<h2>List of products </h2>
<form method="GET" class="form-inline mb-2">
    <input type="text" name="name" placeholder="Filter by name" class="form-control" />
    <button type="submit" class="btn btn-primary ml-2">Search</button>
    <div class="col">
        <a asp-action="Index" class="btn btn-danger w-15">Back</a>
    </div>
</form>
@*<partial name="_MyPartialView" model="Model.First()" />*@
<table class="table">
    <thead>
        <tr>
            <th>Nazwa towaru</th>
            <th>Ilość</th>
            <th>Cena</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ItemName </td>
                <td>@item.Quantity </td>
                <td>@item.Price</td>
            </tr>

        }
    </tbody>

</table>
