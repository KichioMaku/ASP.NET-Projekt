@using Projekt_.net.Enums
@model OrderModel



<h2>Edytuj zamówienie</h2>

<form method="POST" asp-action="Cancel">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Nazwa kontrahenta</label>
        <div class="col-sm-10">
            <input asp-for="Contractor" class="form-control" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Zamówiony towar</label>
        <div class="col-sm-10">
            <input asp-for="Items" class="form-control" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Adres wysyłki</label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Cena netto towaru</label>
        <div class="col-sm-10">
            <input asp-for="NetOrderValue" class="form-control" readonly>
        </div>
    </div>

    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Data zamówienia</label>
        <div class="col-sm-10">
            <input asp-for="OrderDate" type="date" class="form-control" readonly/>
        </div>
    </div>


    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Status zamówienia</label>
        <div class="col-sm-10">
            <select asp-for="OrderStatusEnum" class="form-control" readonly>
                <option value="5">W realizacji</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Powód anulowania</label>
        <div class="col-sm-10">
            <input asp-for="CancellationReason" class="form-control" required>
        </div>
        <span asp-validation-for="CancellationReason" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <input type="submit" class="btn btn-danger w-100 mt-3" value="Anuluj zamówienie" />
    </div>
    <div class="form-group row">
        <a asp-action="Index" class="btn btn-primary w-100">Lista zamówień</a>
    </div>
    <div class="form-group row">
        <a asp-controller="Home" asp-action="Menu" class="btn btn-primary w-100">Powrót do menu</a>
    </div>
</form>
