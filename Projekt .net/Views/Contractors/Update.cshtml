@using Projekt_.net.Enums
@model ContractorsModel


<h2>Edytuj dane kontrahenta</h2>

<form method="POST" asp-action="Update">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Nazwa kontrahenta</label>
        <div class="col-sm-10">
            <input asp-for="ContractorName" class="form-control">
            <span asp-validation-for="ContractorName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Adres e-mail</label>
        <div class="col-sm-10">
            <input asp-for="EmailAddress" type="email" class="form-control">
        </div>
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Adres kontrahenta</label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control">
        </div>
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Numer telefonu</label>
        <div class="col-sm-10">
            <input asp-for="PhoneNumber" type="tel" class="form-control">
        </div>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group row">
		<label for="input" class="col-sm-2 col-form-label">NIP</label>
        <div class="col-sm-10">
            <input asp-for="NIP" class="form-control" />
        </div>
        <span asp-validation-for="NIP" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <input type="submit" class="btn btn-success w-100 mt-3" value="Zatwierdź zmiany" />
    </div>
    <div class="form-group row">
        <a asp-action="Index" class="btn btn-primary w-100">Lista kontahentów</a>
    </div>
    <div class="form-group row">
        <a asp-controller="Home" asp-action="Menu" class="btn btn-primary w-100">Powrót do menu</a>
    </div>
</form>