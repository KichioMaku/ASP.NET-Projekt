@model OrderModel


<h2>Dodaj nowe zamówienie</h2>

<form method="POST" asp-action="Add">
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Nazwa kontrahenta</label>
        <div class="col-sm-10">
            <input asp-for="Contractor" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Zamówiony towar</label>
        <div class="col-sm-10">
            <input asp-for="Items" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Adres wysyłki</label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Cena netto towaru</label>
        <div class="col-sm-10">
            <input asp-for="NetOrderValue" class="form-control">
        </div>
    </div>

    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Data zamówienia</label>
        <div class="col-sm-10">
            <input asp-for="OrderDate" class="form-control" value="@DateTime.Now.ToString("dd.MM.yyyy")" />
        </div>
        <span asp-validation-for="OrderDate" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <label for="input" class="col-sm-2 col-form-label">Status zamówienia</label>
        @*<label asp-for="OrderDate" class="control-label"></label>*@
        <div class="col-sm-10">
            <input asp-for="OrderStatusEnum" class="form-control" value="W realizacji" />
        </div>
    </div>

    <div class="form-group row">
        <input type="submit" class="btn btn-success w-100 mt-3" value="Dodaj nowe zamówienie" />
    </div>
    <div class="form-group row">
        <a asp-action="List" class="btn btn-primary w-100">Lista zamówień</a>
    </div>
    <div class="form-group row">
        <a asp-controller="Home" asp-action="Menu" class="btn btn-primary w-100">Powrót do menu</a>
    </div>
</form>
