@model ItemModel

<h1>Dodaj nowy przedmiot</h1>


<form method="POST" asp-action="Add">
    <div class="form-group">
        <label asp-for="ItemName">Nazwa towaru</label>
        <input asp-for="ItemName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Ilość</label>
        <input asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price">Cena netto</label>
        <input asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Dodaj nowy przedmiot" />
    </div>
</form>

<div class="col">
    <a asp-action="List" class="btn btn-success w-10">Lista</a>
</div>