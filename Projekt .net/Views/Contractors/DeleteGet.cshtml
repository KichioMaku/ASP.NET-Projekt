@model Projekt_.net.Entities.ContractorsEntity


<h2>Usuń kontrahenta</h2>


<div class="form-group row">
	<label for="input" class="col-sm-2 col-form-label">Nazwa kontrahenta</label>
	<div class="col-sm-10">
		<input asp-for="ContractorName" disabled class="form-control" readonly>
	</div>
</div>
<div class="form-group row">
	<label for="input" class="col-sm-2 col-form-label">Adres e-mail</label>
	<div class="col-sm-10">
		<input asp-for="EmailAddress" disabled class="form-control" readonly>
	</div>
</div>
<div class="form-group row">
	<label for="input" class="col-sm-2 col-form-label">Adres kontrahenta</label>
	<div class="col-sm-10">
		<input asp-for="Address" disabled class="form-control" readonly>
	</div>
</div>
<div class="form-group row">
	<label for="input" class="col-sm-2 col-form-label">Numer telefonu</label>
	<div class="col-sm-10">
		<input asp-for="PhoneNumber" disabled class="form-control" readonly>
	</div>
</div>

<div class="form-group row">
	<label for="input" class="col-sm-2 col-form-label">NIP</label>
	<div class="col-sm-10">
		<input asp-for="NIP" disabled class="form-control" readonly />
	</div>
</div>

<form asp-action="DeletePost" asp-route-id="@Model.Id">
	<div class="form-group row">
		<input type="submit" class="btn btn-danger w-100 mt-3" value="Usuń" />
	</div>
</form>
<div class="form-group row">
	<a asp-action="Index" class="btn btn-primary w-100">Lista kontrahentów</a>
</div>
<div class="form-group row">
	<a asp-controller="Home" asp-action="Menu" class="btn btn-primary w-100">Powrót do menu</a>
</div>